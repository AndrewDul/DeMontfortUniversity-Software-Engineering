package primitives;
import java.util.Scanner;

public class MyNote {

    // Method that adds two numbers
    public static int add(int x, int y) {
        return x + y;  // Return the sum of x and y
    }
    
    // Method that subtracts two numbers
    public static int subtraction(int x, int y) {
        return x - y;  // Return the difference of x and y
    }
    
    public static void main(String[] args) {
        // Creating a Scanner object to take input from the user
        Scanner sc = new Scanner(System.in);  
        
        // Asking the user to input the first number
        System.out.println("Input first number:");
        int b = sc.nextInt();  // Storing the first number in variable b
        
        // Asking the user to input the second number
        System.out.println("Input second number:");
        int c = sc.nextInt();  // Storing the second number in variable c
        
        sc.close();  // Closing the Scanner after input is done
        
        // Calling the add and subtraction methods and storing the results
        int addAns = add(b, c);  // Sum of the two numbers
        int subtractionAns = subtraction(b, c);  // Difference of the two numbers
        
        // Printing the results
        System.out.println("That is the sum: " + addAns);  // Outputting the sum
        System.out.println("That is the result of subtraction: " + subtractionAns);  // Outputting the result of subtraction
    }
}
